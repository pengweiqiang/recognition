/* 发布按钮 */
.bottomBtn{
  position:fixed;
  bottom: 0;
  width: 100%;
}

.bottomBtn button{
  width: 100%;
  background-color: #1296db;
  font-size: 30rpx;
  color: white;
  height: 80rpx;
  border-radius:0px;
  line-height: 80rpx;
}




/**重点在于阴影的设计**/
.card {
    border: 2px solid #bebebe;
    border-radius: 8px;
    background-color: #ffffff;
    box-shadow: 3px 1px 1px  #cccccc;
    margin: 10px;
    margin-bottom: 15px;
    position: relative;
}
.ad {
  margin: 10px;
  /* display:flex; */
  /* flex-direction: row; */
  /* justify-content: center; */
  border-radius: 8px;
  background-color: #ffffff;
  box-shadow: 3px 1px 1px  #cccccc;
}

.image {
    width: 100%;
    height: 180px;
    margin:0px;
    background-color: #eeeeee;
    border-radius: 8px;
}

.time {
    float: right;
    margin-top: 170px;
    color: #ffffff;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 1;
    font-size: 12px;
}
 
