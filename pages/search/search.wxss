.search-btn {
  padding: 0 8px;
  background-color: #fff;
}

.top-search-bar {
  background-color: #ff6666;
  border: none;
  position: fixed;/*悬停搜索框的关键样式*/
  top: 0px;
  left: 0;
  width: 100%;
  z-index: 999;
}

.coupon-list-title {
  padding-bottom: 5px;
  font-size: 14px;
}

.coupon-list-desc {
  color: #b6b6b6;
  font-size: 14px;
}

.coupon-list-footer {
  color: #b6b6b6;
  font-size: 14px;
}

.original-price {
  text-decoration: line-through;
}

.present-price {
  color: #ff6666;
}

.present-price-num {
  font-size: 18px;
}

.text-right {
  text-align: right;
}