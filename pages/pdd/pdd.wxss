/* pages/favour/favour.wxss */
.top-search-bar {
  background-color: #ff6666;
  border: none;
  position: fixed;/*悬停搜索框的关键样式*/
  top: 0px;
  left: 0;
  width: 100%;
  z-index: 999;
}



.coupon-list-title {
  padding-bottom: 5px;
  font-size:14px;
}

.coupon-list-desc {
  color: #b6b6b6;
  font-size: 14px;
}

.coupon-list-footer {
  color: #b6b6b6;
  font-size: 14px;
}

.original-price {
  text-decoration: line-through;
}

.present-price {
  color: #ff6666;
}

.present-price-num {
  font-size: 18px;
}

.text-right {
  text-align: right;
}

/* 设置放轮播图的盒子属性 */
swiper {
  width: 100%;
  height: 230rpx;
}

/* 设置轮播图图片属性 */
swiper-item image {
  width: 100%;
  height: 100%;
}